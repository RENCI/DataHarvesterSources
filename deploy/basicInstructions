
# List images
sudo docker image ls

# Remove existing images

sudo docker image rm -f data_harverster:v0.0.1
sudo docker image rm -f renciorg/data_harverster:v0.0.1

# Build an image
# sudo docker build --no-cache -t data_harverster:latest .
sudo docker build --no-cache -t data_harverster:v0.0.1 .


# Reset the tag ID
#sudo docker image tag data_harverster:latest renciorg/data_harverster:latest
sudo docker image tag data_harverster:v0.0.1 renciorg/data_harverster:v0.0.1


# Push the image to docker 

sudo docker login
# Give your userid/passwd

# Load for actual cluster usage
# sudo docker push renciorg/data_harverster:latest
sudo docker push renciorg/data_harverster:v0.0.1


# Start an interactive shell to the image
# sudo docker run -it data_harverster:latest bash
sudo docker run -it data_harverster:v0.0.1 bash

# CLeanup
# sudo docker system prune -a
